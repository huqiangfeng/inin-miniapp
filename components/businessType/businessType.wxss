.business-type {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;

}

.business-type .type-content {
  padding: 25rpx;
  flex: 1;
}

.business-type .type-content .type-item {
  float: left;
  margin: 15rpx;
  width: 145rpx;
  height: 60rpx;
  background: #f5f6f8;
  border-radius: 10rpx;
  text-align: center;
}

.business-type .type-content .type-item .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 60rpx;
}

.business-type .type-content .type-item1 {
  background: linear-gradient(180deg, #fd7d7d 0%, #ff6a6c 100%);
}

.business-type .type-content .type-item1 .text {
  color: #ffffff;
}

.business-type .type-content .type-item.active {
  background: linear-gradient(317deg, #5f7aff 0%, #77a9ff 100%);
}

.business-type .type-content .type-item.active .text {
  color: #ffffff;
}

.business-type .btn-box {
  display: flex;
  width: 100%;
  margin-top: 80rpx;
  border-top: 1px solid #EAEAEA;
}

.business-type .btn-box .yes {
  background: linear-gradient(316deg, #2f58ff 0%, #6f8dff 100%);
  color: #ffffff;
}

.business-type .btn-box view {
  flex: 1;
  text-align: center;
  height: 80rpx;
  background: #ffffff;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 80rpx;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}