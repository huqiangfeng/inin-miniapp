@import '../../app.wxss';

.entire {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(315deg,
      rgba(95, 122, 255, 1) 0%,
      rgba(119, 169, 255, 1) 100%);
  overflow: hidden;
}

swiper {
  margin-top: 30rpx;
  min-height: 915rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

._swiper-item {
  display: flex;
  flex-direction: column;
}

.card {
  flex: 1;
  /* min-height: 915rpx; */
  background-color: #fff;
  /* // height: 915rpx; */
  /* height: 100%; */
  box-shadow: 2rpx 4rpx 12rpx 6rpx #3f529e40;
  border-radius: 20rpx;
  margin: 0 10rpx;
  color: #333;
  font-family: PingFangSC-Regular;
  position: relative;
  overflow-y: scroll;
}

/* // forward */
button,
button::after {
  border: none;
  color: #666;
  background: none;
  margin: 0;
  padding: 0;
}

.forward {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 110rpx;
  height: 45rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(315deg, #5f7aff 0%, #77a9ff 100%);
  border-radius: 23rpx;
}

.forward view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.forward_icon {
  width: 25rpx;
  height: 25rpx;
  margin-right: 9rpx;
}

/* // company-info */
.company {
  display: flex;
  justify-content: flex-start;
  margin: 40rpx 30rpx 30rpx;
  border-bottom: 1px solid #eaeaea;
  padding-bottom: 40rpx;
}

.avatar {
  width: 122rpx;
  height: 122rpx;
  margin-right: 20rpx;
  margin-top: 3rpx;
  border-radius: 50%;
}

.company_info {
  display: block;
  color: #666;
}

.company_owner {
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.company_name {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 37rpx;
  margin: 5rpx 0;
}

.company_job {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
}

/* // tabs */
.tabs {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-left: 20rpx;
}

.tab {
  white-space: nowrap;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  line-height: 32rpx;
  padding: 9rpx 20rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(317deg,
      rgba(95, 122, 255, 1) 0%,
      rgba(119, 169, 255, 1) 100%);
  border-radius: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33rpx;
}

/* // introduce */
.company_introduce {
  padding: 0 20rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

/* // accessory */
.company_accessory {
  margin-top: 81rpx;
  margin-left: 21rpx;
  margin-bottom: 60rpx;
  font-family: PingFangSC-Medium;
}

.company_accessory_title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.company_accessory_content {
  display: flex;
  justify-content: flex-start;
}

.company_accessory_icon {
  width: 88rpx;
  height: 94rpx;
  margin-right: 30rpx;
  position: relative;
}

.folderSuffix {
  font-size: 12rpx;
  color: #333;
  position: absolute;
  width: 40rpx;
  text-align: center;
  right: 0;
  bottom: 14rpx;
  font-weight: 550;
}

.company_accessory_name {
  font-size: 34rpx;
}

.company_accessory_time {
  font-size: 22rpx;
  color: #999;
}

.btn {
  width: 610rpx;
  line-height: 88rpx;
  color: #5f7aff;
  background-color: #fff;
  text-align: center;
  border-radius: 44rpx;
  /* // 121rpx */
  margin: 70rpx auto;
}

.icon {
  width: 40rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}