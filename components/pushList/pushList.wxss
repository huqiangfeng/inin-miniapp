/* components/pushList/pushList.wxss */
.push-list {
  padding: 0 30rpx 0rpx;
}

.push-list .ul {}

.push-list .ul .li {
  border-bottom: 1px solid #EAEAEA;
  padding: 35rpx 0;
}

.push-list .title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
}

.push-list .short-content {
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

  margin-top: 15rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
}

.push-list .tiem {
  margin-top: 25rpx;
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
  display: flex;
}

.read {
  color: #5F7AFF;
}