.location-page {
  display: flex;
  flex-direction: column;
  height: 100%;
  /* overflow: hidden; */
}

.location-page .position-content {
  padding: 22rpx 40rpx 30rpx;


}

.location-page .position-content .title {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
}


.location-page .position-content .position-box {
  margin-top: 15rpx;
  display: flex;
}

.location-page .position-content .position-box .btn-icon {
  padding: 0 20rpx;
  height: 60rpx;
  background: linear-gradient(316deg,
      rgba(47, 88, 255, 1) 0%,
      rgba(111, 141, 255, 1) 100%);
  border-radius: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;

}

.location-page .position-content .position-box .btn-icon .img {
  width: 30rpx;
  height: 38rpx;
  vertical-align: middle;
}

.location-page .position-content .position-box .btn-position {
  padding: 11rpx 30rpx;
}

.location-page .position-content .position-box .btn-position .img {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.location-page .position-content .position-box .btn-position text {
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 37rpx;
}

.location-page .position-list-content {
  display: flex;
  /* height: 50vh; */
  flex: 1;
  overflow: hidden;
}

.location-page .position-list-content .sidebar {
  overflow: auto;
  -webkit-overflow-scrolling: touch;


}

.location-page .position-list-content .city-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  background: rgba(255, 255, 255, 1);
}

.location-page .position-list-content .city-content .ul {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  position: static;

}

.location-page .position-list-content .city-content .ul .li {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-between;


}

.location-page .city-content .ul .li .span {
  padding-left: 56rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  flex: 1;
}

.location-page .city-content .ul .li .img {
  margin: 23rpx 50rpx;
  width: 34rpx;
  height: 34rpx;
}

.location-page .btn-box {
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;


}

.location-page .btn-box view {
  text-align: center;
  line-height: 60rpx;
  width: 190rpx;
  height: 60rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: 400;
}

.location-page .btn-box .reset {
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(199, 199, 199, 1);
}

.location-page .btn-box .affirm {
  color: rgba(255, 255, 255, 1);
  background: rgba(216, 216, 216, 1);
}

.location-page .btn-box .affirm-bgc {
  background: linear-gradient(316deg,
      rgba(47, 88, 255, 1) 0%,
      rgba(111, 141, 255, 1) 100%);
}