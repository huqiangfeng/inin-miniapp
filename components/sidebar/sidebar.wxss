/* components/sidebar/sidebar.wxss */
.scroll {
  height: 100%;
  width: 280rpx;

}

.scroll .scroll-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 24rpx 30rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  background: rgba(245, 246, 248, 1);
}

.scroll .scroll-item.active {
  background: #fff;

}