.container{
    width: 100%;
    min-height: 480rpx;
    background-color: #F5F6F8;
}
.content{
    width: 100%;
    min-height: 692rpx;
    background-color: #fff;
}
.video_item{
    width: 710rpx;
    min-height: 692rpx;
    margin-left: 20rpx;
    margin-bottom: 15rpx;
}
.item_header{
    width: 100%;
    height: 98rpx;
    padding-top: 60rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.item_header .le_con{
    width: 70%;
    height: 100%;
}
.item_header .le_con .user_avatar{
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    float: left;
    margin-right: 15rpx;
    margin-top: 15rpx;
}
.item_header .le_con .user_info{
    width: auto;
    float: left;
}
.item_header .le_con .user_info .user_name_position .name{
    color: #333333;
    font-weight: bold;
    font-size: 26rpx;
}
.item_header .le_con .user_info .user_name_position .positon{
    color: #333333;
    font-size: 22rpx;
}
.item_header .le_con .user_info .user_comapny{
    color: #666666;
    font-size: 22rpx;

}
.item_header .ri_con{
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.item_header .ri_con .add_btn{
    width:122rpx;
    height:44rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    background:linear-gradient(316deg,rgba(47,88,255,1) 0%,rgba(111,141,255,1) 100%);
    border-radius:22rpx;
}
.item_header .ri_con .wait_feiend{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #999;
    color: #fff;
    font-size: 22rpx;
    border-radius: 50%;
    padding: 3rpx;

}
.item_body{
    width: 710rpx;
    height: 380rpx;
    border-radius: 10rpx;
    position: relative;
}
.look_num{
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    color: #fff;
    font-size:22rpx;
    font-weight:500;
}
.item_bottom{
    width: 100%;
    height: 170rpx;
    position: relative;
}
.title{
    margin-top: 25rpx;
    font-size:30rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
}
.opation{
    margin-top: 15rpx;
}
.opation .time{
    font-size:24rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.opation .soon{
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    color: #C5C5C5;
    float: right;
}
.share_box{
    width:710rpx;
    height:110rpx;
    background:rgba(255,255,255,1);
    /* background-color: #f66; */
    border-radius:10rpx;
    position: absolute;
    top: 120rpx;
    left: 0;
    z-index: 55;
}
.share_box .forward{
    width: auto;
    margin-top: 20rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.share_box .forward .share_btn{
    width: auto;
    height: auto;
    border: 0;
    outline: none;
    background-color: #fff;
    margin: 0;
    padding: 0;
    position: static;
}
