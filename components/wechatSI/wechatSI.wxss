.wechat {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 516rpx;
  background: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  box-shadow: 0px 0rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
}

.header {
  text-align: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  padding: 36rpx 30rpx;
}

.text {
  text-align: left;
}

.content {
  margin-top: 100rpx;
  text-align: center;
}

.content text {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.content .video-box {
  display: inline-block;
}

.content .video-box .img {
  margin-top: 25rpx;
  width: 110rpx;
  height: 110rpx;
}

.content .video-box .active {
  margin-top: 60rpx;
  width: 136rpx;
  height: 136rpx;
}

.content .hidden {
  width: 33rpx;
  height: 33rpx;
  padding: 30rpx;
  position: absolute;
  left: 50rpx;
  bottom: 90rpx;
}