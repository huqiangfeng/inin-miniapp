/* 大盒子 */

._image {
	width: 45rpx;
	height: 45rpx;
	display: block;
}

/* 输入框大盒子 */
.input_area {
	display: flex;

}

/* 左边的图标 */
.input_area_left image {
	padding: 25rpx 30rpx;
}

/* 输入框/录音btn  */
.input_area_content {
	flex: 1;
}

/* 右边的图标 */
.input_area_right {
	display: flex;
	padding: 0 15rpx;
}

.input_area_right image {
	padding: 30rpx 15rpx;
}

/* 表情图标 */
.input_area_right .meme_png {
	/* padding: 5rpx 17rpx 0 0; */
}

/* 加号 */
.input_area_right .menu_png {
	padding-top: 5rpx;
}

/* 发送 */
.input_area_right .send_btn {
	margin: 26rpx 15rpx 0 10rpx;
}

.send_btn {
	width: 88rpx;
	height: 50rpx;
	color: #fff;
	font-size: 28rpx;
	background: linear-gradient(317deg, #5f7aff 0%, #77a9ff 100%);
	border-radius: 6rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

/* // 菜单栏 */
.menu {
	height: 410rpx;
}

.bottom_menu_block {
	float: left;
	width: 250rpx;
	margin-top: 30rpx;
	height: 150rpx;
	text-align: center;
	font-size: 22rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	line-height: 50rpx;
}

.bottom_menu_back_img {
	margin: 0 auto;
	width: 90rpx;
	height: 90rpx;
	background-color: #f2f2f2;
	display: flex;
	justify-content: center;
	align-items: center;
}