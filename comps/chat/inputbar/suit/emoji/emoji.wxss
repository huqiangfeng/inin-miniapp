.emoji_list {
	width: 100%;
	height: 410rpx;
	background-color: #dddddd;
	display: none;
	padding: 20rpx;
	box-sizing: border-box;
}

.showEmoji {
	width: 100%;
	height: 410rpx;
	background-color: #dddddd;
	display: block;
	padding: 20rpx;
	box-sizing: border-box;
}

.emoji_list image,
.showEmoji image {
	width: 70rpx;
	height: 70rpx;
	padding: 18rpx;
}

.emoji {
	width: 70rpx;
	height: 70rpx;
	margin: 0 0;
}

.emoji_item {
	display: flex;
	/* justify-content: space-around; */
}