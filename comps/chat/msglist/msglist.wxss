.pad-30 {
  padding: 30rpx;
}

.wrap {
  background-color: #f2f2f2;
  height: 100%;
}

.wrap>scroll-view {
  height: 100%;
}

.stance {
  width: 100%;
  height: 150rpx;
}

.message {
  width: 92%;
  height: auto;
  padding: 15rpx 30rpx;
  position: relative;
}

.time {
  margin-bottom: 14rpx;
  text-align: center;
}

.time .time-text {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
}

.user .user-text {
  margin: auto 100rpx 8rpx;
  font-size: 20rpx;
  color: #dcdcdc;
  display: block;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 30rpx 0 0;
  float: left;
}

.portrait {
  border-radius: 50%;
}

.msg {
  display: inline-block;
  padding: 20rpx;
  max-width: calc(85% - 80rpx);
  min-height: 40rpx;
  font-size: 24rpx;
  /*overflow: hidden;*/
  text-align: left;
  word-break: break-all;
  background-color: #fff;
  border-radius: 26rpx;
  position: relative;
  /* margin-top: 24rpx; */
}

.self .msg:after {
  content: '';
  width: 0rpx;
  height: 0px;
  border-color: transparent transparent #5f7aff #5f7aff;
  border-style: solid;
  border-width: 30rpx;
  position: absolute;
  top: -6rpx;
  right: -12rpx;
  border-radius: 12rpx;
  transform: rotate(-28deg);
  z-index: 1;
}

.uesr .msg:after {
  content: '';
  width: 0px;
  height: 0px;
  border-color: #fff #fff transparent transparent;
  border-style: solid;
  border-width: 30rpx;
  position: absolute;
  top: 25rpx;
  left: -12rpx;
  border-radius: 12rpx;
  transform: rotate(-28deg);
  z-index: 0;
}

.msg .msg-text,
.msg .audio-player,
.msg .avatar {
  position: relative;
  z-index: 9;
}

.msg .msg_poprightarrow {
  position: absolute;
  right: -10rpx;
  height: 18rpx;
  width: 18rpx;
  margin-top: -10rpx;
}

.msg .msg_popleftarrow {
  position: absolute;
  left: -14rpx;
  height: 18rpx;
  width: 18rpx;
  margin-top: -10rpx;
}

.msg .msg-text {
  line-height: 40rpx;
  font-size: 32rpx;
  margin: 0;
}

