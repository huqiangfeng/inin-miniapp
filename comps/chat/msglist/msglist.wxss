.self {
  text-align: right;
}

.self .avatar {
  float: right;
  margin: 0 0 0 30rpx;
}

.user {
  position: relative;
  bottom: -30rpx;
}

.self .msg {
  background-color: #5f7aff;
  color: #fff;
}

.self .msg:before {
  right: inherit;
  left: 100%;
  border-right-color: transparent;
  border-left-color: #b2e281;
}

.template {
  display: inline;
}

.err {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: -40rpx;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.toolCabinet {
  position: absolute;
  background: rgba(34, 34, 34, 1);
  border-radius: 10rpx;
  z-index: 99;
  display: flex;
  transform: translateX(-50%);
  left: 50%;
}

.tooltop {
  top: -90rpx;
}

.toolbuttom {
  bottom: -90rpx;
}

.toolCabinet .tool-item {
  width: 90rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  border-right: 1px solid #fff;
  position: relative;
  z-index: 9;
}

.toolbuttom:after {
  content: '';
  width: 0rpx;
  height: 0px;
  border-color: rgba(34, 34, 34, 1);
  border-style: solid;
  border-width: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 50%;
  border-radius: 4rpx;
  transform: rotate(-45deg) translateX(71%);
}

.tooltop:after {
  content: '';
  width: 0rpx;
  height: 0px;
  border-color: rgba(34, 34, 34, 1);
  border-style: solid;
  border-width: 20rpx;
  position: absolute;
  bottom: -30rpx;
  right: 50%;
  border-radius: 4rpx;
  transform: rotate(-45deg) translateX(71%);
}

.toolCabinet .tool-item:last-child {
  border-right: none;
}

.mankeep .text {
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.uesr .mankeep .text {
  border-top: 1px solid #eaeaea;
}

.self .mankeep .text {
  color: rgba(255, 255, 255, 1);
  border-top: 1px solid #b0c0ff;
}

.mankeep-content {
  display: flex;
  align-items: center;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mankeep-content .img-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.mankeep-content .name {
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  line-height: 45rpx;
}

.mankeep-content .user-short {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  letter-spacing: 1rpx;
}

.mankeep-content .companyn-name {
  height: 25rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 小传 */
.message .call-box {
  box-sizing: border-box;
  width: 580rpx;
  margin: 40rpx auto;
  padding: 0 30rpx 20rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 10rpx 1px rgba(151, 170, 249, 0.3);
  border-radius: 10rpx;
}

.message .call-box .call-header {
  border-bottom: 1px solid #eaeaea;
}

.message .call-box .row {
  padding: 20rpx 0;
  display: flex;
}

.message .call-box .row .call-avatar {
  width: 70rpx;
  height: 70rpx;
}

.message .call-box .row .left {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 37rpx;
  margin-right: 20rpx;
}

.message .call-box .row .right {
  flex: 1;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
  display: flex;
  align-items: center;
}

.message .call-box .row .map {
  width: 100%;
}

.message .call-box .btn {
  text-align: center;
  margin: 20rpx auto;
  width: 520rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(317deg, rgba(95, 122, 255, 1) 0%, rgba(119, 169, 255, 1) 100%);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}