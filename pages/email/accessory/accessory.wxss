/* pages/email//accessory/accessory.wxss */
.accessory {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.accessory .list {
  flex: 1;
}

.accessory .btn {
  width: 610rpx;
  height: 88rpx;
  background: linear-gradient(317deg,
      rgba(95, 122, 255, 1) 0%,
      rgba(119, 169, 255, 1) 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  text-align: center;
  margin: 60rpx auto;
}

/* 遮罩 */
.btn-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.btn-box view {
  width: 722rpx;
  height: 105rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  margin: 13rpx 14rpx;
  font-size: 37rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 105rpx;
  text-align: center;
}

.btn-box .btn-del {
  color: rgba(254, 59, 48, 1);
}

.btn-box .btn-cancel {
  color: rgba(0, 122, 255, 1);
}

/* <!-- 列表 --> */
.list-item {
  margin: 0 40rpx;
  border-bottom: 1px solid #eaeaea;
  display: flex;
}

.list-item .item-info {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item .item-info .item-name {
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  margin: 11rpx 0 5rpx;
}

.list-item .item-info .item-size {
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}

.list-item .img-left {
  width: 98rpx;
  height: 104rpx;
  margin-right: 20rpx;
}

.list-item .img-right {
  width: 8rpx;
  height: 36rpx;
  transform: rotate(180deg);
  padding: 48rpx 0 48rpx 50rpx;
}