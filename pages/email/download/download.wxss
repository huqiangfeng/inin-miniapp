/* inbox//download/download.wxss */
.entire {
    width: 100%;
    height: 100%;
    text-align: center;
    color: #333;
    font-family: PingFangSC;
    background-color: #fff;
}

.shadow {
    height: 1rpx;
    margin-bottom: 232rpx;
    box-shadow: 0px 4px 12px 6px rgba(140, 140, 140, 0.1);
}

.company_accessory_icon {
    width: 88rpx;
    height: 94rpx;
    margin-right: 30rpx;
    position: relative;
}

.folderSuffix {
    font-size: 12rpx;
    color: #333;
    position: absolute;
    width: 40rpx;
    text-align: center;
    right: 0;
    bottom: 14rpx;
    font-weight: 550;
}

.file_name {
    margin-top: 50rpx;
    font-size: 34rpx;
    font-weight: 500;
    line-height: 48rpx;
}

.file_size {
    margin-top: 20rpx;
    font-size: 27rpx;
    font-weight: 400;
    line-height: 38rpx;
    margin-bottom: 170rpx;
}

.btn {
    margin: 0 auto;
    width: 250rpx;
    font-size: 32rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
}