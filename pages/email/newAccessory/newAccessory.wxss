/* pages/email//newAccessory/newAccessory.wxss */
.new-accessory {
  padding: 60rpx 40rpx;
}

.title {
  height: 75rpx;
  font-size: 54rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(5, 5, 5, 1);
  line-height: 75rpx;
}

.content-text {
  height: 84rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
  margin-top: 30rpx;
}

.input-content {
  display: flex;
  border-bottom: 1px solid #D2D2D2;
  align-items: center;
  height: 90rpx;
  margin-top: 100rpx;

}

.input-content view {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(6, 6, 6, 1);
  line-height: 90rpx;
}

.input-content input {
  padding-left: 30rpx;
  flex: 1;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 42px;
}

.btn {
  margin: 170rpx auto 0;
  width: 610rpx;
  height: 88rpx;
  background: linear-gradient(317deg, rgba(95, 122, 255, 1) 0%, rgba(119, 169, 255, 1) 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  text-align: center;
}

.reset-btn {
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(210, 210, 210, 1);
  color: rgba(51, 51, 51, 1);
  margin: 40rpx auto 0;
}

.loading {}