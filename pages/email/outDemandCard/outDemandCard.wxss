/* inbox//outDemandCard/outDemandCard.wxss */
.entire {
    width: 100%;
    height: 100%;
    background-color: #f2f2f2;
    color: #333;
}

.recommendCompanies {
    height: 100%;
}

.navBack {
    padding-bottom: 110rpx;
    background: linear-gradient(315deg,
            rgba(95, 122, 255, 1) 0%,
            rgba(119, 169, 255, 1) 100%);
    position: relative;
}

.nav {
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    background-color: #fff;
    transform: translateY(30rpx);
    box-shadow: 2px 4px 12px 6px #8c8c8c1a;
    border-radius: 20rpx;
}

.greet {
    margin-top: 176rpx;
    margin-bottom: 50rpx;
    background-color: #fff;
    min-height: 578rpx;
    padding: 24rpx 30rpx 50rpx 30rpx;
    font-size: 28rpx;
}

.greet_title {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
    margin-bottom: 24rpx;
}

.greet_content {
    width: 690rpx;
    height: 310rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    border: 1px solid rgba(210, 210, 210, 1);
    box-sizing: border-box;
    padding: 40rpx 20rpx 0;
    line-height: 40rpx;
}

textarea {
    width: 100%;
    height: 100%;
    display: block;
    position: relative;
}

.greet_phonetics {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}

.phonetics_icon {
    width: 41rpx;
    height: 46rpx;
    padding: 0 15rpx 0 30rpx;
}

.keyword {
    margin-top: 30rpx;
    padding: 0 30rpx;
    min-height: 100rpx;
    background: #f0f0f0;
    border-radius: 60rpx;
}

.add_keyword {
    margin-top: 30rpx;
    padding: 0 30rpx;
    min-height: 100rpx;
    background: #f0f0f0;
    border-radius: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    align-content: space-around;
    position: relative;
}

/* // 未添加关键词 */
.placeholder {
    color: #999;
    font-size: 30rpx;
}

.bigger {
    position: absolute;
    top: 0;
    right: 0;
}

.bigger_b {
    position: absolute;
    top: 0;
    right: 0;
    width: 100rpx;
    height: 100rpx;
}

.bigger_s {
    position: absolute;
    top: 50%;
    right: 0;
    width: 50rpx;
    height: 50rpx;
    transform: translateY(-50%);
}

.keyword_icon_add {
    width: 48rpx;
    height: 48rpx;
}

/* // 已选择关键词 */
.edit_keyword {
    margin-top: 30rpx;
    padding: 0 30rpx;
    min-height: 100rpx;
    background: #f0f0f0;
    border-radius: 60rpx;
    position: relative;
}

.keyword_tags {
    display: flex;
    justify-content: flex-start;
    align-content: flex-start;
    flex-wrap: wrap;
    padding-top: 30rpx;
}

.keyword_tag {
    padding: 9rpx 60rpx 9rpx 22rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    color: #5f7aff;
    background: rgba(255, 255, 255, 1);
    border-radius: 34rpx;
    border: 1rpx solid rgba(95, 122, 255, 1);
    position: relative;
}

.keyword_tag_del {
    width: 20rpx;
    height: 20rpx;
    position: absolute;

    padding: 20rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.keyword_icon_edit {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
}

/* // 关键词选择弹窗 */
.dialog {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333;
    background: rgba(2, 2, 2, 0.3);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9999;
}

.dialog_body {
    width: 90%;
    /* height: 75%; */
    margin-top: 20%;
    border-radius: 20rpx;
    background-color: #fff;
    position: relative;
}

.dialog_body_del {
    position: absolute;
    text-align: right;
    top: 0;
    right: 0;
    padding: 30rpx;
}

.del_icon {
    width: 33rpx;
    height: 33rpx;
}

.dialog_body_title {
    font-size: 36rpx;
    text-align: center;
    height: 50rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 50rpx;
    margin-top: 40rpx;
}

.dialog_body_title1 {
    text-align: center;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
    margin-top: 10rpx;
}

.dialog_body_content {
    display: flex;
    justify-content: space-between;
    align-content: flex-start;
    margin: 52rpx 46rpx 0;
    flex-wrap: wrap;
    max-height: 550rpx;
    overflow-y: scroll;
}

.dialog_body_content_tag {
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    margin-bottom: 40rpx;
    line-height: 68rpx;
    padding: 0 40rpx;
    border-radius: 34rpx;
    min-width: 100rpx;
    text-align: center;
    height: 68rpx;
    background: rgba(240, 240, 240, 1);
}

.dialog_body_content_tag_active {
    color: #fff;
    background: linear-gradient(317deg, #5f7aff 0%, #77a9ff 100%);
}

.dialog_body_btn {
    margin-top: 60rpx;
    width: 300rpx;
    font-size: 32rpx;
}

.dialog_body_tip {
    margin-top: 11rpx;
    color: #999;
    font-size: 22rpx;
    text-align: center;
    margin-bottom: 30rpx;
}