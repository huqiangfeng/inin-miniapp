/* inbox//search/search.wxss */
.entire {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
}

.region {
    height: 70vh;
}
.opations{
    width: 200rpx;
    height: 260rpx;
    position: absolute;
    bottom: 10rpx;
    right: 40rpx;
}
.opations .option_item{
    width: 100%;
    height: 108rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.opations .option_item .text{
    color: #f3f5f7;
    font-size:28rpx;
    font-weight: bolder;
}
.opations .option_item .icon{
    width:108rpx;
    height:108rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.opations .option_item .icon .icon_item{
    width: 36rpx;
    height:36rpx;
}
.opations .option_item .icon_b{
    background:linear-gradient(149deg,rgba(19,188,132,1) 0%,rgba(17,184,128,1) 100%);
    box-shadow:0 1rpx 5rpx 0 rgba(0,0,0,0.3);
}
.opations .option_item .icon_h{
    background:linear-gradient(316deg,rgba(245,137,49,1) 0%,rgba(255,149,62,1) 100%);
    box-shadow:0px 1rpx 5rpx 0px rgba(0,0,0,0.3);
}
.recommend .van-dropdown-menu__item{
    justify-content: flex-start;
}
.entire-content {
    /* padding-top: 160rpx; */
    /* height: 100%; */
    flex: 1;
    overflow: hidden;
}

/* 搜索 */
.public-search {
    /* position: absolute; */
    width: 100%;
    /* top: 0; */
    background-color: #fff;
    z-index: 8;
}

.search-condition {
    display: flex;
}

.search-condition .search-item {
    /* flex: 1; */
    width: 220rpx;
    padding: 10rpx 30rpx 30rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.search-condition .search-item .text {
    display: inline-block;
}

.search-condition .search-item .checkde {
    color: rgba(74, 100, 228, 1);
}

.search-condition .search-item ._Img_Icon {
    margin-left: 10rpx;
    width: 16rpx;
    height: 14rpx;
}

.search_row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx 20rpx 30rpx;
    box-shadow: 0px 4px 12px 6px rgba(140, 140, 140, 0.1);
    margin-bottom: 45rpx;
}

.back_gauge {
    padding-left: 30rpx;
    padding-right: 30rpx;
}

/* // 未点击搜索框时 */
.search_before {
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: #333;
    font-weight: 400;
}

.search_before_title {
    margin-top: 74rpx;
    margin-bottom: 40rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.search_before_title span {
    font-size: 34rpx;
    margin-left: 20rpx;
}

.search_before_tags {
    font-size: 26rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-content: center;
}

.search_before_tag {
    white-space: nowrap;
    width: 30%;
    padding-bottom: 30rpx;
}

/* 推荐 */
.entire .recommend {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    padding: 30rpx 40rpx 0;
}

/* 列表内容 */
.company-list {
    width: 100%;
    height: 100%;
}


/*  */

.component_input_back {
    width: 610rpx;
    background: rgba(240, 240, 240, 1);
    height: 60rpx;
    border-radius: 60rpx;
    position: relative;
}

.component_input_value {
    position: absolute;
    top: 0;
    left: 111rpx;
    height: 60rpx;
}

.component_input_search {
    width: 29rpx;
    height: 29rpx;
    position: absolute;
    top: 17rpx;
    left: 47rpx;
}

.component_del_icon {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    top: 15rpx;
    right: 15rpx;
    z-index: 10000;
}

/* -------lest */
.component_entire {
    width: 100%;
    height: 100%;
}

.component_company_list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 45rpx;
    margin: 45rpx 40rpx 0 40rpx;
    border-bottom: 1rpx solid #eaeaea;
}

.single_row {
    display: flex;
}

.component_company_content {
    display: flex;
    align-items: center;
    min-width: 80%;
    max-width: 90%;
}

.component_company_img {
    width: 90rpx;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 19rpx;
    font-size: 26rpx;
    border: 2rpx solid #ccc;
    position: relative;
}

.component_company_img_count {
    width: 32rpx;
    height: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    font-weight: 500;
    color: #fff;
    background: #e91f1f;
    border-radius: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transform: translate(-15rpx, -15rpx);
}

.component_company_msg {
    color: #333;
    font-size: 34rpx;
    font-weight: 500;
    margin-bottom: 6rpx;
}

.line {
    width: 2rpx;
    height: 30rpx;
    color: #d2d2d2;
    margin: 10rpx 30rpx;
    font-size: 30rpx;
}

.component_company_statistic {
    display: flex;
}

.component_company_statistic_num {
    color: #666;
    font-size: 24rpx;
}

.component_company_statistic_title {
    color: #999;
    font-size: 18rpx;
}

.component_send_icon {
    width: 48rpx;
    height: 48rpx;
}

/*  */
.Shadow {
    position: fixed;
    box-shadow: 0rpx 4rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
    width: 100%;
    height: 1rpx;
    left: 0;
    bottom: 0;

}