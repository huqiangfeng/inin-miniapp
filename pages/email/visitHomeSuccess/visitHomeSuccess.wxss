/* pages/email/visitHomeSuccess/visitHomeSuccess.wxss */
.visit_success{
    width: 100%;
    height: auto;
}
.visit_success .header{
    width: 100%;
    height: 292rpx;
}
.visit_success .header image{
    width: 100%;
    height: 292rpx;
}
.company_list{
    width: 690rpx;
    min-height: 200rpx;
    margin: 0 auto;
}
.company_list .list_item{
    width: 690rpx;
    height: 200rpx;
    border-bottom: 1rpx solid #EAEAEA;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.company_list .list_item .left{
    width: 80rpx;
    height: 100rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.company_list .list_item .left .radio{
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.company_list .list_item .left .radio image{
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
}
.company_list .list_item  .right{
    width: 580rpx;
    min-height: 100rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.company_list .list_item  .right .company_logo{
    width: 90rpx;
    height: 90rpx;
    margin-right: 19rpx;
    border-radius:50%;
}
.company_list .list_item  .right .company_info .name{
    color: #333;
    font-size: 28rpx;
    font-weight: bolder;
}
.company_list .list_item  .right .company_info .opstions{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.company_list .list_item  .right .company_info .opstions .item{
    width: 82rpx;
    height: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    
}
.company_list .list_item  .right .company_info .opstions  .reveive_num{
    border-left:1rpx solid #D2D2D2;
    border-right: 1rpx solid #D2D2D2;
    box-sizing: border-box;
    margin: 0 10rpx;
}
.company_list .list_item  .right .company_info .opstions .item text{
    color: #666666;
    font-size: 24rpx ;
}
.footer{
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.footer .visit_btn{
    width:610rpx;
    height:88rpx;
    background:linear-gradient(317deg,rgba(95,122,255,1) 0%,rgba(119,169,255,1) 100%);
    border-radius:44rpx;
    color: #fff;
    font-size:32rpx;
    text-align: center;
    line-height: 88rpx;
}
