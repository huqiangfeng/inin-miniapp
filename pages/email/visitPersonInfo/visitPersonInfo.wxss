/* pages/email/visitPersonInfo/visitPersonInfo.wxss */
.box{
    width:100%;
    height: 100%;
    padding-top:1rpx;
    background:linear-gradient(317deg,rgba(95,122,255,1) 0%,rgba(119,169,255,1) 100%);
    position: relative;
}
.box .send{
    width:610rpx;
    height:88rpx;
    background:rgba(255,255,255,1);
    border-radius:44rpx;
    color: #5F7AFF;
    font-size: 32rpx;
    text-align: center;
    line-height: 88rpx;
    position: absolute;
    bottom: 127rpx;
    left: 80rpx;
}
.box .swp{
    width: 100%;
    margin-top: 60rpx;

}
.swiper_item{
    width:650rpx;
    height:869rpx;
    background:rgba(255,255,255,1);
    box-shadow:2rpx 4rpx 12rpx 6rpx rgba(63,82,158,0.25);
    border-radius:20rpx;
}
.swiper_item .top_box{
    width: 610rpx;
    height: 209rpx;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eaeaea;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.swiper_item .top_box .avarte{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.swiper_item .top_box .info{
    width: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}
.swiper_item .top_box .info .name{
    color: #333333;
    font-size: 36rpx;
    font-weight: bold;

}
.swiper_item .top_box .info .company_name{
    color: #666666;
    font-size: 26rpx;
    font-weight: bold;
    margin: 5rpx 0;

}
.swiper_item .top_box .info .position_name{
    color: #666666;
    font-size: 24rpx;
}
.swiper_item .bootom_box{
    width: 610rpx;
    
    min-height: 100rpx;
}
.swiper_item .bootom_box .visit_item{
    width: 100%;
}
.swiper_item .bootom_box .visit_item .title{
    color: #333333;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 25rpx;
    margin-top: 15rpx;
    padding: 0 20rpx;
}
.swiper_item .bootom_box .visit_item .content{
    color: #333333;
    font-size: 28rpx;
    padding: 0 20rpx;
}