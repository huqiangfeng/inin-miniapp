/* pages/personal/personal.wxss */
.entire {
    width: 100%;
    height: 100%;
    overflow: hidden;
    overflow-y: auto;
    position: relative;
}

/* // 头部 */
.nav_back {
    /*   height: 280rpx; */
    padding: 0rpx 30rpx;
    font-weight: 500;
    font-family: PingFangSC-Medium;
    color: #fff;
    background: linear-gradient(317deg, #5f7aff 0%, #77a9ff 100%);
}

.nav {
    padding-top: 10rpx;
    padding-bottom: 38rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;

}

.nav .navigator-hover {
    background: none;
}

.nav_no_login {
    padding: 10rpx 0 38rpx 50rpx;
    font-size: 28rpx;
}

.nav_no_login_btn {
    margin-top: 10rpx;
    width: 210rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #5f7aff;
    background: #fff;
    border-radius: 30rpx;
}

.single_row {
    display: flex;
    justify-content: flex-start;
}

.nav_content {
    width: 600rpx;
    display: flex;
    justify-content: flex-start;
}

.avatar {
    width: 111rpx;
    height: 111rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}

.nav_con_first {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 10rpx;
}

.nav_con_first_name {
    font-size: 34rpx;
    line-height: 48rpx;
    margin-right: 10rpx;
}

.approve {
    width: 98rpx;
    height: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-radius: 20px;
    font-size: 18rpx;
    line-height: 25rpx;
}

.nav_con_first_approve {
    width: 98rpx;
    height: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-radius: 20px;
    font-size: 18rpx;
    line-height: 25rpx;
    color: #5f7aff;
    background: #f0f0f0;
}

.nav_con_first_approve_no {
    width: 98rpx;
    height: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-radius: 20px;
    font-size: 18rpx;
    line-height: 25rpx;
    color: #5F7AFF;
    background: rgba(240, 240, 240, 1);
    /* background: linear-gradient(317deg, #5f7aff 0%, #77a9ff 100%); */
}

.approve_icon {
    width: 26rpx;
    height: 26rpx;
    border-radius: 100%;
    margin-right: 6rpx;
}

.nav_con_second {
    font-size: 26rpx;
    line-height: 37rpx;
}

.nav_arrow {
    width: 22rpx;
    height: 22rpx;
    display: block;
    content: "";
    border-top: 4rpx solid #fff;
    border-right: 4rpx solid #fff;
    transform: rotate(45deg);
}

/* // 我的投递 */

.my_send_msgs {
    width: 100%;
    height: 220rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.my_send_msg {
    max-width: 28%;
    height: 60%;
    display: flex;
    justify-content: center;
    text-align: center;
    align-content: space-between;
    flex-wrap: wrap;
    flex-direction: row;

}

.my_send_msg view {
    width: 100%;
}

.my_send_msg_img {
    width: 70rpx;
    height: 70rpx;
}

.my_send_msg_text {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 30rpx;
    margin-bottom: 10rpx;
}

/* // 分割线 */
.grey_line {
    width: 100%;
    height: 10rpx;
    background: #f2f2f2;
}

/* // 个人中心 */
.download-box {
    background: #f2f2f2;
    padding: 60rpx 0 100rpx;
}

.download {
    margin: 0 auto;
    width: 610rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 26rpx;
    color: #5f7aff;
    background: linear-gradient(317deg,
            rgba(95, 122, 255, 0.14) 0%,
            rgba(119, 169, 255, 0.14) 100%);
    border-radius: 35rpx;
}

.download_img {
    width: 34rpx;
    height: 34rpx;
    margin-right: 20rpx;
}

/* // weui */
.weui-cell {
    padding: 27rpx 30rpx;
}

.weui-cell__bd {
    color: #333;
    font-size: 30rpx;
}

.weui-cell__hd_img {
    margin-right: 20rpx;
    vertical-align: baseline;
    width: 44rpx;
    height: 44rpx;
    position: relative;
    top: 4rpx;

}

.weui-cell__ft {
    color: #666;
    font-size: 26rpx;
}