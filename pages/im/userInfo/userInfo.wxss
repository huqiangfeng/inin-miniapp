/* pages/im//userInfo/userInfo.wxss */

.bg-box {
  width: 750rpx;
  height: 20rpx;
  background: rgba(245, 246, 248, 1);
}

.component-box {
  padding: 20rpx 40rpx
}

.title {
  position: relative;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 10rpx;
  height: 50rpx;
  background: linear-gradient(317deg, rgba(95, 122, 255, 1) 0%, rgba(119, 169, 255, 1) 100%);
  border-radius: 5rpx;
}


.component_info_content {
  display: flex;
  /* align-items: center; */
  flex: 1;
  padding: 40rpx;
  margin-bottom: 100rpx;
}

.flex1 {
  flex: 1;
}

.component_info_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  background: rgba(255, 255, 255, 1);
}

.component_info_img_count {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  background: #e91f1f;
  border-radius: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transform: translate(-15rpx, -15rpx);
}

.message_tip_normal {
  border-radius: 20rpx;
  width: 43rpx;
}

.message_tip_max {
  width: 53rpx;
  border-radius: 20rpx;
}

.message_tip_min {
  width: 33rpx;
  border-radius: 100%;
}



.component_info_msg {
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 48rpx;
  margin-bottom: 6rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.line {
  width: 2rpx;
  height: 30rpx;
  color: #d2d2d2;
  margin: 14rpx 15rpx 12rpx;
  background-color: #D2D2D2;
}

.component_info_statistic {
  display: flex;
}

.component_info_statistic_num {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
}

.component_info_statistic_title {
  height: 25rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 25rpx;
}


.kankan {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;

}

.kankan .left {}

.kankan .right {
  display: flex;
  align-items: center;
}

.kankan .right .avatar_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}