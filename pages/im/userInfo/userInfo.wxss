/* pages/im//userInfo/userInfo.wxss */

.bg-box {
  width: 750rpx;
  height: 20rpx;
  background: rgba(245, 246, 248, 1);
}

.component-box {
  padding: 20rpx 40rpx
}

.title {
  position: relative;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 10rpx;
  height: 50rpx;
  background: linear-gradient(317deg, rgba(95, 122, 255, 1) 0%, rgba(119, 169, 255, 1) 100%);
  border-radius: 5rpx;
}


.component_info_content {
  display: flex;
  /* align-items: center; */
  flex: 1;
  padding: 40rpx;
  margin-bottom: 100rpx;
}

.flex1 {
  flex: 1;
}

.component_info_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  background: rgba(255, 255, 255, 1);
}

.component_info_img_count {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  background: #e91f1f;
  border-radius: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transform: translate(-15rpx, -15rpx);
}

.message_tip_normal {
  border-radius: 20rpx;
  width: 43rpx;
}

.message_tip_max {
  width: 53rpx;
  border-radius: 20rpx;
}

.message_tip_min {
  width: 33rpx;
  border-radius: 100%;
}



.component_info_msg {
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 48rpx;
  margin-bottom: 6rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.line {
  width: 2rpx;
  height: 30rpx;
  color: #d2d2d2;
  margin: 14rpx 15rpx 12rpx;
  background-color: #D2D2D2;
}

.component_info_statistic {
  display: flex;
}

.component_info_statistic_num {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
}

.component_info_statistic_title {
  height: 25rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 25rpx;
}


.kankan {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;

}

.kankan .left {}

.kankan .right {
  display: flex;
  align-items: center;
}

.kankan .right .avatar_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 标记 */
.tabs {
  padding: 40rpx 0;
  min-height: 50rpx;
  display: flex;
  flex-wrap: wrap;
}

.tab-item {
  padding: 0 17rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 34rpx;
  border: 1px solid rgba(95, 122, 255, 1);
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(95, 122, 255, 1);
  line-height: 50rpx;
  margin-right: 30rpx;
}

.tab_img-box {
  height: 50rpx;
}

.tab_img-box .tab_img {
  float: right;
  width: 50rpx;
  height: 50rpx;
  padding: 0 40rpx;
}

/* user-list  相关人脉 */
.user-list {
  color: #666;
  padding: 30rpx 0;
}

.list {
  /* // single row */
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  /* padding: 39rpx 0rpx 32rpx 0rpx; */
  border-bottom: 1rpx solid #eaeaea;
}

.single_row {
  display: flex;
  justify-content: flex-start;
}

.list_all {
  /* // img+content */
  display: flex;
  justify-content: flex-start;
  flex: 1;
  box-sizing: border-box;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 21rpx;
  border-radius: 100%;
}

.list_content {
  font-size: 22rpx;
  line-height: 30rpx;
  flex: 1;
}

.list_content_people {
  height: 48rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-top: 25rpx;
}

.list_content_company {
  margin-top: 2rpx;
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
}

.list_content_job {
  margin-top: 3rpx;
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
}

.list_content_tags {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-bottom: 24rpx;

}

.list_content_tags .Grey_Tag {
  margin-right: 10rpx;
  margin-top: 8rpx;
  height: 30rpx;
  background: rgba(240, 240, 240, 1);
  border-radius: 34rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
}

.is_add_friend {
  white-space: nowrap;
  margin: 13rpx 0 0 0;
  font-size: 26rpx;
  line-height: 44rpx;
}

.add_friend {
  white-space: nowrap;
  margin: 13rpx 0 0 0;
  width: 122rpx;
  font-size: 26rpx;
  line-height: 44rpx;
  color: #fff;
  background: linear-gradient(316deg,
      rgba(47, 88, 255, 1) 0%,
      rgba(111, 141, 255, 1) 100%);
}

.add_white {
  width: 21rpx;
  height: 21rpx;
}

.are_friend {
  width: 122rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #5f7aff;
  border-radius: 22rpx;
  border: 1rpx solid #5f7aff;
}

.apply_friend {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 168rpx;
  font-size: 24rpx;
  text-align: center;
  color: #666;
  border-radius: 22rpx;
  border: 1rpx solid #666;
}

.icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}


/* 没有 更多*/
.Grey_Bottom_Sense {
  background-color: #fff;
}