/* pages/im//userInfo/userInfo.wxss */

.component_info_content {
  display: flex;
  /* align-items: center; */
  flex: 1;
  margin-right: 30rpx;
}

.flex1 {
  flex: 1;
}

.component_info_img {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 19rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  border: 2rpx solid #ccc;
  position: relative;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 37rpx;
  padding: 10rpx;
  box-sizing: border-box;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 3px 2px rgba(191, 191, 191, 0.15);
  border: 1px solid rgba(243, 243, 243, 1);
}

.component_info_img_count {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  background: #e91f1f;
  border-radius: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transform: translate(-15rpx, -15rpx);
}

.message_tip_normal {
  border-radius: 20rpx;
  width: 43rpx;
}

.message_tip_max {
  width: 53rpx;
  border-radius: 20rpx;
}

.message_tip_min {
  width: 33rpx;
  border-radius: 100%;
}



.component_info_msg {
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 48rpx;
  margin-bottom: 6rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.line {
  width: 2rpx;
  height: 30rpx;
  color: #d2d2d2;
  margin: 14rpx 15rpx 12rpx;
  background-color: #D2D2D2;
}

.component_info_statistic {
  display: flex;
}

.component_info_statistic_num {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
}

.component_info_statistic_title {
  height: 25rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 25rpx;
}