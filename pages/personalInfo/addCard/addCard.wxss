/* pages/personalInfo//addCard/addCard.wxss */
.entire {
  width: 100%;
  height: 100%;
}

.shadow {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 99999;
  height: 10rpx;
  box-shadow: 0rpx 4rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
}

.shadow::after {
  content: '';
  box-shadow: 0rpx 4rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
}

.weui-cells:after,
.weui-cells:before {
  height: 0;
}

/* // weui */
.weui-cell {
  margin: 0 30rpx;
  padding: 27rpx 0;
  border-bottom: 1px solid #EAEAEA;
}

.weui-cell__bd {
  color: #333;
  font-size: 30rpx;
}

.weui-cell__hd_avatar {
  width: 81rpx;
  height: 81rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.weui-cell__hd_img {
  margin-right: 20rpx;
  vertical-align: middle;
  width: 34rpx;
  height: 34rpx;
}

.weui-cell__ft {
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
  min-width: 200rpx;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.label {
  display: inline-block;
}

.hint {
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
  padding: 20rpx 40rpx;
}

.hint .img_icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 12rpx;
  position: relative;
  top: 4rpx;

}

.weui-cell:before {
  border: none;
}

.img_icon_qr {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 4rpx;
}

.submit-btn {
  margin: 170rpx auto;
  width: 610rpx;
  height: 88rpx;
  background: linear-gradient(317deg, rgba(95, 122, 255, 1) 0%, rgba(119, 169, 255, 1) 100%);
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
}

.weui-input {
  padding-right: 16px;
}
.weui-cell__ft_in-access:after {
  right: 5px;
}

.color {
  color: #888;
}