.entire {
    width: 100%;
    height: 100%;
    color: #000;
}

.shadow {
    height: 118rpx;
    box-shadow: 0rpx 4rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
    display: flex;
    justify-content: center;
    align-items: center;
}

.search {
    position: relative;
    background-color: #f0f0f0;
    width: 670rpx;
    height: 60rpx;
    border-radius: 44rpx;
}

.input_search {
    width: 29rpx;
    height: 29rpx;
    position: absolute;
    top: 17rpx;
    left: 47rpx;
}

/* // scroll-view */
::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

.lists {
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;

    /* height: 550px; */
}

/* 遮盖底边框用的 */
.overspread {
    width: 100%;
    height: 1px;
    background-color: #eaeaea;
    position: absolute;
    bottom: 0;
    left: 0;
}

/* // 单行 */
.tags {
    font-size: 34rpx;
    font-weight: 600;
    line-height: 48rpx;
    padding: 17rpx 0rpx 15rpx 0rpx;
    border-bottom: 1rpx solid #eaeaea;
    font-weight: 600;
}

.list {
    display: flex;
    align-items: flex-start;
    margin-left: 30rpx;
    /* //左移的按钮专用 */
    position: relative;
}

.list_contentbox {
    /* border-bottom: 1rpx solid #eaeaea; */
}

.list_img {
    margin-top: 16rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
}

.avatar_none {
    margin-top: 10rpx;
    width: 70rpx;
    height: 70rpx;
    border: 1rpx solid #ccc;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 18rpx;
}

.list_con {
    flex: 1;
    margin-left: 20rpx;
    position: relative;
    overflow: hidden;
    /* border-bottom: 1rpx solid #eaeaea; */
}


.list_con_name {
    margin-top: 23rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(0, 0, 0, 1);
    line-height: 40rpx;
}

.list_con_company {
    margin: 5rpx 0 22rpx;
    height: 30rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 30rpx;
}

/* // 单行向左移动的删除按钮 */
.slideitem .weui-slideview__btn {

    color: #fff;
    background: #e91f1f;

}

/* // 不左移的删除按钮 */
.del_btn_noleft {
    position: absolute;
    top: 0;
    right: -180rpx;
    color: #fff;
    background-color: #e91f1f;
    font-size: 30rpx;
    font-weight: 400;
    width: 180rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* // 右侧字母导航 */
.locate_tags {
    width: 20rpx;
    color: #007aff;
    position: absolute;
    right: 3%;
    top: 15%;
    font-size: 20rpx;
    z-index: 10000;
}

.move-x {
    transition: all 300ms 0s linear;
}