.entire {
    width: 100%;
    height: 100%;
}

.shadow {
    box-shadow: 0rpx 4rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
    height: 1rpx;
}

.lists {
    color: #333;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    margin: 0 30rpx;
}

.list {
    padding: 25rpx 0;
    display: flex;
    align-items: center;
    position: relative;
    border-bottom: 1rpx solid #eaeaea;
}

.avatar {
    width: 106rpx;
    height: 106rpx;
    border-radius: 100%;
    margin-right: 15rpx;
}

.content {
    width: 80%;
}

.name {
    font-size: 34rpx;
    line-height: 48rpx;
    font-weight: 500;
    margin-bottom: 10rpx;
}

.company,
.job {
    font-size: 22rpx;
    color: #666;
    line-height: 30rpx;
    margin-bottom: 10rpx;
}

.tabs {
    display: flex;
}

.time {
    position: absolute;
    top: 35rpx;
    right: 0;
    font-size: 22rpx;
    color: #999;
    line-height: 30rpx;
}