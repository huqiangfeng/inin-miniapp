/* pages/personalInfo//qrCode/qrCode.wxss */
.qrcode {
  background: rgba(245, 246, 248, 1);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.qrcode-content {
  width: 670rpx;
  height: 880rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 26rpx;
}

.info {
  margin: 60rpx 40rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.info image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
}

canvas {
  margin: 0 auto;
}

.footer {
  margin-top: 40rpx;
  text-align: center;
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
}