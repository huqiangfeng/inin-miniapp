.entire {
    width: 100%;
    height: 100%;
    font-size: 32rpx;
    color: #666;
}

.header {
    margin-bottom: 48rpx;
    height: 140rpx;
    box-shadow: 0rpx 4rpx 12rpx 6rpx rgba(140, 140, 140, 0.1);
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding-bottom: 24rpx;
    position: relative;
    color: #333;
    font-size: 32rpx;
}

.bigger {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
}

.header_icon {
    width: 25rpx;
    height: 35rpx;
    position: absolute;
    left: 22rpx;
    bottom: 33rpx;
}

.input_area {
    margin: 0 30rpx;
    padding-bottom: 47rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #d2d2d2;

}

.input_area input {
    color: #333;
}

.icon {
    width: 34rpx;
    height: 34rpx;
}

.word_count {
    font-size: 30rpx;
    text-align: right;
    margin: 20rpx 30rpx 170rpx 30rpx;
}